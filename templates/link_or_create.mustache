{{#msgs}}
    {{> auth_shibboleth_link/alert}}
{{/msgs}}

{{#userdata}}
    <h3>{{#str}} auth:shibboleth:welcome, auth_shibboleth_link {{/str}}, {{firstname}} {{lastname}}</h3>
    <p>{{#str}} auth:shibboleth:welcome:question, auth_shibboleth_link {{/str}}</p>
{{/userdata}}

<table border="0" class="generaltable">
    <tbody>
        {{#isloggedin}}
        <tr>
            <td>
                <a href="?datahash={{datahash}}&linkorcreate=3" class="btn btn-secondary">
                    {{#pix}} i/checkpermissions {{/pix}}
                    {{#str}} auth:linkaccount, auth_shibboleth_link, { "userfullname": {{# quote }}{{ userfullname }}{{/ quote }} } {{/str}}
                </a>
                <br /><br />
                {{#str}} auth:linkaccount:description, auth_shibboleth_link {{/str}}
            </td>
        </tr>
        {{/isloggedin}}
        <tr>
            <td>
                <a href="?datahash={{datahash}}&linkorcreate=2" class="btn btn-secondary">
                    {{#pix}} i/cohort {{/pix}}
                    {{#str}} auth:linkotheraccount, auth_shibboleth_link {{/str}}
                </a>
                <br /><br />
                {{#str}} auth:linkotheraccount:description, auth_shibboleth_link {{/str}}
            </td>
        </tr>
        <tr>
            <td>
                <a href="?datahash={{datahash}}&linkorcreate=1" class="btn btn-secondary">
                    {{#pix}} i/assignroles {{/pix}}
                    {{#str}} auth:createaccount, auth_shibboleth_link, { "idpusername": {{# quote }}{{ idpusername }}{{/ quote }} } {{/str}}
                </a>
                <br /><br />
                {{#str}} auth:createaccount:description, auth_shibboleth_link {{/str}}
            </td>
        </tr>
    </tbody>
</table>
